<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/mainBackground"
    android:layout_height="match_parent"
    tools:context=".SettingFragment">

    <TextView
        android:id="@+id/balanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="145dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="450dp"
        android:text="Your Correct Balance:"
        android:textColor="@color/mainTextColor" />

    <TextView
        android:id="@+id/balanceTextView"
        android:layout_width="345dp"
        android:layout_height="129dp"
        android:layout_below="@+id/balanceText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="386dp"
        android:gravity="center"
        android:text="$ 0.0"
        android:textColor="@color/mainTextColor"
        android:textSize="60dp" />

    <Button
        android:id="@+id/incomeButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/balanceTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/buttonColor"
        android:text="+"
        android:textColor="@color/transTextColor"
        android:textSize="45sp" />

    <Button
        android:id="@+id/expenseButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/balanceTextView"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/incomeButton"
        android:backgroundTint="@color/buttonColor"
        android:text="â€“"
        android:textColor="@color/transTextColor"
        android:textSize="45sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transactionsRecyclerView"
        android:layout_width="387dp"
        android:layout_height="371dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/background"
        android:clipToPadding="false"
        android:padding="10dp"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


</RelativeLayout>
